<?xml version="1.0" encoding="UTF-8"?>
<policy>
    <template>
        <name>Updater_SystemMaintenancePolicyTemplate</name>
        <description>Policy template for system maintenance related tasks.</description>
        <lexicon>updater:permissions</lexicon>
        <template_group>Admin</template_group>
        <permissions>
            <permission>
                <name>updater.system_receive_package_notifications</name>
                <description>updater.perm.system_receive_package_notifications</description>
                <value>1</value>
            </permission>
            <permission>
                <name>updater.system_receive_core_notifications</name>
                <description>updater.perm.system_receive_core_notifications</description>
                <value>1</value>
            </permission>
            <permission>
                <name>updater.system_perform_maintenance_tasks</name>
                <description>updater.perm.system_perform_maintenance_tasks</description>
                <value>1</value>
            </permission>
        </permissions>
    </template>
    <name>Updater_SystemMaintenancePolicy</name>
    <description>Policy for system maintenance tasks like showing updater widget and receiving notifications.</description>
    <class></class>
    <permissions>
        <permission>
            <name>system_perform_maintenance_tasks</name>
            <value>1</value>
        </permission>
        <permission>
            <name>system_receive_core_notifications</name>
            <value>1</value>
        </permission>
        <permission>
            <name>system_receive_package_notifications</name>
            <value>1</value>
        </permission>
    </permissions>
</policy>