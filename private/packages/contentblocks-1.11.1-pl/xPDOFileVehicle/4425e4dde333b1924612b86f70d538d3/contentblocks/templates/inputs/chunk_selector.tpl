<div class="contentblocks-loader"></div>
<div class="contentblocks-field contentblocks-field-chunk_selector">
    <div class="contentblocks-field-actions"></div>

    <label for="{%=o.generated_id%}-chunk_selector">{%=o.name%}</label>
    <div class="contentblocks-field-chunk_selector-select">
        <label for="{%=o.generated_id%}-add-property">{%=_('contentblocks.chunk.choose_chunk')%}</label>
        <select id="{%=o.generated_id%}-chunk_selector"></select>
    </div>
    <div class="contentblocks-field-chunk_selector-add-property">
        <label for="{%=o.generated_id%}-add-property">{%=_('contentblocks.snippet.add_property')%}</label>
        <select id="{%=o.generated_id%}-add-property"></select>
    </div>
    <div class="contentblocks-field-chunk_selector-properties">
        <ul class="contentblocks-properties-list"></ul>
    </div>
</div>
